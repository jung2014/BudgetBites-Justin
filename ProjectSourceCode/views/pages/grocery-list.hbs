<div class="discover-page bg-body-tertiary py-5">
  <div class="container-xxl px-3 px-md-4">
    <div class="row">
      <div class="col-12">
        <div class="mb-4">
          <a href="/discover" class="btn btn-outline-secondary mb-3">‚Üê Back to Discover</a>
        </div>

        <!-- Selected Recipes Summary -->
        <section class="card border-0 shadow-lg mb-5">
          <div class="card-header bg-white py-4 px-4 px-md-5 border-0">
            <div>
              <p class="text-uppercase text-secondary small fw-semibold mb-1">Selected recipes</p>
              <h5 class="mb-0 fw-semibold">Recipes in your grocery list</h5>
            </div>
          </div>
          <div class="card-body px-4 px-md-5 pb-5">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              {{#each recipes}}
              <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                  <div class="card-body d-flex align-items-center">
                    {{#if image}}
                    <img src="{{image}}" alt="{{title}}" class="me-3" style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;">
                    {{/if}}
                    <div class="flex-grow-1">
                      <h6 class="card-title fw-semibold mb-2">{{title}}</h6>
                      <div class="d-flex flex-wrap gap-2 mb-2">
                        {{#if readyInMinutes}}
                        <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle">
                          <i class="bi bi-stopwatch me-1"></i>{{readyInMinutes}} min
                        </span>
                        {{/if}}
                        {{#if servings}}
                        <span class="badge bg-secondary-subtle text-secondary-emphasis border border-secondary-subtle">
                          <i class="bi bi-people me-1"></i>Serves {{servings}}
                        </span>
                        {{/if}}
                      </div>
                      {{#if totalIngredientCost}}
                      <p class="mb-1 small text-muted">
                        <strong>Estimated cost: {{formatCurrency totalIngredientCost}}</strong>
                      </p>
                      {{/if}}
                      {{#if totalCostPerServing}}
                      <p class="mb-0 small text-muted">
                        {{formatCurrency totalCostPerServing}} per serving
                      </p>
                      {{/if}}
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </section>

        <!-- Total Cost Summary -->
        <section class="alert alert-info border-0 shadow-sm mb-5" role="alert">
          <h5 class="alert-heading fw-semibold">Estimated Total Cost</h5>
          <p class="mb-0"><strong>${{totalEstimatedCost}}</strong> (estimated based on ingredient prices)</p>
        </section>

        <!-- Grocery List -->
        <section class="card border-0 shadow-lg mb-5">
          <div class="card-header bg-white py-4 px-4 px-md-5 border-0">
            <div>
              <p class="text-uppercase text-secondary small fw-semibold mb-1">Shopping list</p>
              <h5 class="mb-0 fw-semibold">Organized by aisle</h5>
            </div>
          </div>
          <div class="card-body px-4 px-md-5 pb-5">
            {{#if groupedByAisle}}
            <!-- Group by aisle -->
            {{#each groupedByAisle}}
            <div class="mb-5">
              <h6 class="border-bottom pb-2 mb-4 fw-semibold text-dark">{{@key}}</h6>
              <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {{#each this}}
                <div class="col">
                  <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-start" style="text-align: left;">
                      <div class="d-flex align-items-start">
                        {{#if image}}
                        <img src="https://spoonacular.com/cdn/ingredients_100x100/{{image}}" 
                             alt="{{name}}" 
                             class="me-3" 
                             style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                        {{/if}}
                        <div class="flex-grow-1" style="text-align: left;">
                          <h6 class="card-title fw-semibold mb-2" style="text-align: left;">{{name}}</h6>
                          <p class="card-text mb-2" style="text-align: left;">
                            <small class="text-muted">{{original}}</small>
                          </p>
                          {{#if estimatedCost}}
                          <p class="mb-2" style="text-align: left;">
                            <strong class="text-success">Estimated Cost: ${{estimatedCost}}</strong>
                          </p>
                          {{/if}}
                          <details class="mt-2" style="text-align: left;">
                            <summary class="text-primary fw-medium" style="cursor: pointer; font-size: 0.9em; text-align: left;">
                              Used in recipes
                            </summary>
                            <ul class="mt-2 mb-0" style="font-size: 0.85em; list-style: none; padding-left: 0; text-align: left;">
                              {{#each recipes}}
                              <li class="mb-1" style="text-align: left;">
                                <i class="bi bi-check-circle text-success me-1"></i>{{this}}
                              </li>
                              {{/each}}
                            </ul>
                          </details>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
            {{/each}}
            {{else}}
            <p class="text-muted text-center py-4">No ingredients found.</p>
            {{/if}}
          </div>
        </section>

        <!-- Print Button -->
        <div class="d-flex justify-content-center mb-4">
          <button onclick="window.print()" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-printer me-2"></i>Print Grocery List
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .grocery-list-card {
    border-radius: 1.5rem;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .grocery-list-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 1.5rem 3rem rgba(15, 23, 42, 0.1);
  }

  @media print {
    .btn, nav, header {
      display: none !important;
    }
    .discover-page {
      background: white !important;
    }
  }
</style>
